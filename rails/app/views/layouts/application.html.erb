      <% if @admins.include?(@current_user) %>
          | <%=  link_to 'Add Host', new_host_path, {:style => 'color:#2E64FE;background-color:#F8FBEF'} %>
          | <%=  link_to 'Add Product', new_product_path, {:style => 'color:#2E64FE;background-color:#F8FBEF'} %>
          | <%=  link_to 'Add Role', new_role_path, {:style => 'color:#2E64FE;background-color:#F8FBEF'} %>
          | <%=  link_to 'Add Host Type', new_host_type_path, {:style => 'color:#2E64FE;background-color:#F8FBEF'} %>
      <% end %>
    </td> -->
  </tr>
</table>

<%= yield %>

<%=  link_to 'Show Hosts', hosts_path, {:style => 'color:#2E64FE;background-color:#F8FBEF'} %>
| <%=  link_to 'Show Products', products_path, {:style => 'color:#2E64FE;background-color:#F8FBEF'} %>
| <%=  link_to 'Show Roles', roles_path, {:style => 'color:#2E64FE;background-color:#F8FBEF'} %>
| <%=  link_to 'Show Host Types', host_types_path, {:style => 'color:#2E64FE;background-color:#F8FBEF'} %>
<% if @admins.include?(@current_user) %>
    | <%=  link_to 'Add Host', new_host_path, {:style => 'color:#2E64FE;background-color:#F8FBEF'} %>
    | <%=  link_to 'Add Product', new_product_path, {:style => 'color:#2E64FE;background-color:#F8FBEF'} %>
    | <%=  link_to 'Add Role', new_role_path, {:style => 'color:#2E64FE;background-color:#F8FBEF'} %>
    | <%=  link_to 'Add Host Type', new_host_type_path, {:style => 'color:#2E64FE;background-color:#F8FBEF'} %>
