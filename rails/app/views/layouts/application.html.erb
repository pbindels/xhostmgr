  <html>
  <head>
<title>Hostmgr</title>



  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<table>
  <tr>
    <td><h2>Hostmgr</h2></td>
    <td><img src='/assets/logo.jpg' hspace='1' vspace='2' border='0' alt='One Kings Lane'></td>
    <td><h2>User:  <%= @current_user%></h2> </td>
    <td>
</table>

<table>
  <tr>
    <td>
      <% all_tasks = Rails.configuration.my_scope.tasks %>
      <% if @admins.include?(@current_user)%>
          <% tasks = all_tasks.values.flatten%>
      <% else %>
          <% tasks = all_tasks["user"]%>
      <% end %>

      <%= form_tag('/hosts/do_task') do  %>
          <div class="field9">
            <%= label_tag :task_name, "" %>
            <%= select_tag(:task_name, options_for_select(tasks), {:prompt => "Select a New Task", :class => "text_box_label"}) %>
          </div>
      <%end%>
    </td>
    <td>&nbsp&nbsp</td>
    </tr>
    <tr>
