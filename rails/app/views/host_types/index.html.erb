<h1>Listing Platform Types</h1>

<table  cellpadding=10 border="1" class="imagetable">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>

<% @host_types.each do |host_type| %>
  <tr>
    <td><%= host_type.name %></td>
    <td><%= host_type.description %></td>
    <td><%= link_to 'Show', host_type %></td>
    <td><%= link_to 'Edit', edit_host_type_path(host_type) %></td>
    <td><%= link_to 'Destroy', host_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

